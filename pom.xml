<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">


	<modelVersion>4.0.0</modelVersion>
	<groupId>com.biit.abcd</groupId>
	<artifactId>abcd-tool</artifactId>
	<packaging>pom</packaging>
	<version>0.0.1</version>
	<name>Agile Business sCenario Designer Tool</name>

	<modules>
		<module>abcd-logger</module>
		<module>abcd-persistence</module>
		<module>abcd-core</module>
		<module>abcd-gui</module>
		<module>abcd-release</module>
	</modules>

	<distributionManagement>
		<repository>
			<id>central</id>
			<name>biit-releases</name>
			<url>http://ec2-54-217-214-241.eu-west-1.compute.amazonaws.com:8080/artifactory/ext-release-local</url>
		</repository>
	</distributionManagement>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<jetty-maven-plugin.version>9.1.4.v20140401</jetty-maven-plugin.version>
		<maven-compiler-plugin.version>3.1</maven-compiler-plugin.version>
		<maven-antrun-plugin.version>1.7</maven-antrun-plugin.version>
		<maven-surefire.version>2.17</maven-surefire.version>
		<exec-maven-plugin.version>1.2.1</exec-maven-plugin.version>
		<org.testng.version>6.8.7</org.testng.version>
		<vaadin.version>7.1.14</vaadin.version>
		<vaadin.plugin.version>${vaadin.version}</vaadin.plugin.version>
		<vaadin-toolkit.version>LATEST</vaadin-toolkit.version>
		<mysql-odbc.version>5.1.27</mysql-odbc.version>
		<org.springframework.version>3.2.5.RELEASE</org.springframework.version>
		<aspectj.version>1.7.4</aspectj.version>
		<log4j.version>1.2.17</log4j.version>
		<slf4j-log4j12.version>1.7.7</slf4j-log4j12.version>
		<hibernate.version>4.3.5.Final</hibernate.version>
		<liferay-authentication-client.version>0.5.0</liferay-authentication-client.version>
	</properties>

	<dependencies>
		<!-- Testing -->
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>${org.testng.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven-compiler-plugin.version}</version>
				<configuration>
					<source>7</source>
					<target>7</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>