<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">


	<modelVersion>4.0.0</modelVersion>
	<groupId>com.biit</groupId>
	<artifactId>abcd-tool</artifactId>
	<packaging>pom</packaging>
	<version>0.8.10</version>
	<name>Agile Business sCenario Designer Tool</name>

	<modules>
		<module>abcd-logger</module>
		<module>abcd-persistence</module>
		<module>abcd-core</module>
		<module>abcd-gui</module>
		<module>abcd-release</module>
	</modules>

	<distributionManagement>
		<repository>
			<id>central</id>
			<name>biit-releases</name>
			<url>https://dev.biit-solutions.com:8443/mavenartifactory/ext-release-local</url>
		</repository>
	</distributionManagement>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<jetty-maven-plugin.version>8.1.15.v20140411</jetty-maven-plugin.version>
		<maven-compiler-plugin.version>3.1</maven-compiler-plugin.version>
		<maven-antrun-plugin.version>1.7</maven-antrun-plugin.version>
		<maven-surefire.version>2.17</maven-surefire.version>
		<exec-maven-plugin.version>1.2.1</exec-maven-plugin.version>
		<org.testng.version>6.8.7</org.testng.version>
		<vaadin.version>7.1.15</vaadin.version>
		<vaadin.plugin.version>${vaadin.version}</vaadin.plugin.version>
		<vaadin-toolkit.version>LATEST</vaadin-toolkit.version>
		<mysql-odbc.version>5.1.27</mysql-odbc.version>
		<org.springframework.version>3.2.5.RELEASE</org.springframework.version>
		<aspectj.version>1.8.0</aspectj.version>
		<log4j.version>1.2.17</log4j.version>
		<slf4j-api.version>1.7.7</slf4j-api.version>
		<slf4j-log4j12.version>1.7.7</slf4j-log4j12.version>
		<hibernate.version>4.3.6.Final</hibernate.version>
		<liferay-service-common.version>0.4.0</liferay-service-common.version>
		<liferay-authentication-client.version>0.5.1</liferay-authentication-client.version>
		<jointjs-widget.version>0.1.2-WIDGET</jointjs-widget.version>
		<jexeval.version>1.0.4</jexeval.version>
		<drools.version>6.1.0.CR2</drools.version>
		<biit-common-utils.version>0.1.0</biit-common-utils.version>
		<form-structure.version>0.1.8</form-structure.version>
		<orbeon-form-reader.version>0.3.0</orbeon-form-reader.version>
		<apache-poi.version>3.10.1</apache-poi.version>
		<root.directory>${project.basedir}</root.directory>
		<gson.version>2.3</gson.version>
		<c3p0.version>0.9.1.2</c3p0.version>
		<h2.version>1.4.181</h2.version>
		<ehcache.version>2.6.9</ehcache.version>
	</properties>

	<dependencies>
		<!-- Testing -->
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>${org.testng.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven-compiler-plugin.version}</version>
				<configuration>
					<source>7</source>
					<target>7</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>